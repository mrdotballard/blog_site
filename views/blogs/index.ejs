<% include ../partials/header %>

  <div class="ui huge header">RESTful Blog App  </div>

    <div class="ui top attached segment">
      
      <div class="ui divided items">
        
          <% blogs.forEach(function(blog){ %>
            
            <div class="item"> 
              <div class="image">
                  <img src="<%= blog.image %>">
              </div>
              <div class="content">
                  <a class="header" href="/blogs/<%=blog.id%>"><%= blog.title %></a>
                  <div class="meta">
                      <span><%= blog.created.toDateString() %> | <%= blog.username %> </span>
                  </div>
              <div class="description">
                  <!-- <p><%= blog.content.substring(0, 100) %>...</p> -->
                  <p><%= blog.intro %>...</p>
              </div>
              <div class="extra">
                  <a class="ui floated basic violet button" href="/blogs/<%=blog.blog_id%>">
                    Read <i class="right chevron icon"></i>
                  </a>
              </div>
            </div>
            </div>
            
          <% }) %>
      </div>  
      
    </div>




<% include ../partials/footer %>
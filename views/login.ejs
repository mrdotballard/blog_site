<% include partials/header %>
<div class="ui text container segment">
  <div class="ui huge header">Login</div>
  
  <!-- forms currently not supporting PUT or DELETE methods, so express uses 'method-override' -->
  <form class="ui form" action="/login" method="POST">
    <div class="field">
      <label>Username</label>
      <input type="text" name="username">
    </div>
    
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
        
    <button class="ui big inverted teal button">Login</button>

  </form>
</div>
